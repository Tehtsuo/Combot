		<Name>Verdana</Name>
		<Size>12</Size>
		<Color>FF000000</Color>
		<Bold />
	</template>	

	<window name='ComBot_LogUpload'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>600</Width>
		<Height>100</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF888888</BackgroundColor>
			<Children>
				<Text name='ComBot_TitleBar_Title'>
					<Alignment>Center</Alignment>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Text>Upload Log</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/ComBotGUI_LogUpload"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_LogUpload_Children">
			<Frame name="ComBot_LogUpload_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_LogUpload_Frame_Children">
					<Text name='NameTitle'>
						<X>1%</X>
						<Y>1%</Y>
						<Width>98%</Width>
						<Height>24%</Height>
						<Text>IRC/Forum name (Not your EVE account name!)</Text>
					</Text>
					<Textentry name="Name">
						<X>1%</X>
						<Y>15%</Y>
						<Width>98%</Width>
						<Height>24%</Height>
					</Textentry>
					<Text name='DescriptionTitle'>
						<X>1%</X>
						<Y>40%</Y>
						<Width>99%</Width>
						<Height>24%</Height>
						<Text>Description of the problem you are reporting</Text>
					</Text>
					<Textentry name="Description">
						<X>1%</X>
						<Y>55%</Y>
						<Width>98%</Width>
						<Height>24%</Height>
					</Textentry>
					
					<Button name="Upload">
						<X>1%</X>
						<Y>80%</Y>
						<Width>98%</Width>
						<Height>19%</Height>
						<Text>Upload</Text>
						<OnLeftClick>
							echo httpget -postparam username "${UIElement[Name@ComBot_LogUpload_Frame@ComBot_LogUpload].Text.Escape}" -postparam semantic "${Script[ComBot].VariableScope.Config.Common.ComBot_Mode.Escape}" -postparam description "${UIElement[Description@ComBot_LogUpload_Frame@ComBot_LogUpload].Text.Escape}" -postfile logfile "${Script[ComBot].CurrentDirectory.Replace[\\,/].Escape}${Script[ComBot].VariableScope.UI.LogFile.Right[-1].Escape}" http://combot.vendaria.net/logs/upload
							httpget -postparam username "${UIElement[Name@ComBot_LogUpload_Frame@ComBot_LogUpload].Text.Escape}" -postparam semantic "${Script[ComBot].VariableScope.Config.Common.ComBot_Mode.Escape}" -postparam description "${UIElement[Description@ComBot_LogUpload_Frame@ComBot_LogUpload].Text.Escape}" -postfile logfile "${Script[ComBot].CurrentDirectory.Replace[\\,/].Escape}${Script[ComBot].VariableScope.UI.LogFile.Right[-1].Escape}" http://combot.vendaria.net/logs/upload
							ui -unload "&filepath;/ComBotGUI_LogUpload"
						</OnLeftClick>
					</Button>
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
