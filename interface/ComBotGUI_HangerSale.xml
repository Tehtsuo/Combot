	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_HangarSale'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_Miner_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>HangarSale Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/ComBotGUI_HangerSale"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_HangarSale_Children">
			<Frame name="ComBot_HangarSale_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_HangarSale_Frame_Children">
					<Text name='obj_HangarSaleInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text>HangarSale is a full-functioned item sales system.  It uses API calls from EVE-Central to determine if the sale of an item would be more profitable than refining the item based on your refinery skill and station standing.  It will then check your current sell orders to ensure they have not been undercut and update orders if necessary.  Finally, any remaining order slots will be filled with the highest sellable items which are more profitable than refining.</Text>
					</Text>						 
					<Text name='obj_HangarSale_SaleSystemTitle'> 
						<X>1%</X> 
						<Y>28%</Y> 
						<Width>30%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Selling System Bookmark</Text>
					</Text>						 
					<listbox Name="obj_HangarSale_SaleSystem">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>30%</Y>
						<Width>30%</Width>
						<Height>20%</Height>
						<OnLoad>
							variable index:bookmark Bookmarks
							variable iterator BookmarkIterator

							EVE:GetBookmarks[Bookmarks]
							Bookmarks:GetIterator[BookmarkIterator]

							if ${BookmarkIterator:First(exists)}
								do
								{	
									This:AddItem[${BookmarkIterator.Value.Label}]
								}
								while ${BookmarkIterator:Next(exists)}
							This.ItemByText[${Script[ComBot].VariableScope.Config.HangarSale.SaleSystem}]:Select
						</OnLoad>
						<OnSelect>
							Script[ComBot].VariableScope.Config.HangarSale:SetSaleSystem[${This.SelectedItem.Text}]
						</OnSelect>
					</listbox>


				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
