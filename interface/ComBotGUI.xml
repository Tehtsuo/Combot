<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='Console.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<template name='Button.Font'>	
		<Name>Arial</Name>
		<Size>12</Size>
		<Color>FF000000</Color>
		<Bold>TRUE</Bold>
	</template>	

	<window name='ComBot'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>550</Width>
		<Height>320</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_TitleBar_Title'>
					<Alignment>Center</Alignment>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Text>ComBot by Tehtsuo/Vendan</Text>
				</Text>
				<button	Name='Close'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						endscript ComBot
					</OnLeftClick>
				</button>
				<button	Name='Hide'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>r80</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Hide</Text>
					<OnLeftClick>
						if ${UIElement[ComBotTab@ComBot].Visible}
						{
							UIElement[ComBotTab@ComBot]:Hide
							This:SetText[Show]
						}
						else
						{
							UIElement[ComBotTab@ComBot]:Show
							This:SetText[Hide]
						}
					</OnLeftClick>
				</button>
				<button	Name='Run'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>0</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Run</Text>
					<OnLeftClick>
						if ${Script[ComBot].VariableScope.ComBot.Paused}
						{
							This:SetText[Stop]
							Script[ComBot].VariableScope.ComBot:Resume
						}
						else
						{
							This:SetText[Run]
							Script[ComBot].VariableScope.ComBot:Pause
						}
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_Children">
			<TabControl	Name='ComBotTab'>
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<Tabs>
					<Tab Name='Status'>
						<frame name='FillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						 </frame>					
						<console Name="StatusConsole">
							<Font template='Console.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0</X>
							<Y>0</Y>
							<Width>100%</Width>
							<Height>90%</Height>
						</console>
						<combobox Name="ComBot_Mode">
							<BackgroundColor>FF000000</BackgroundColor>
							<X>1%</X>
							<Y>92%</Y>
							<Width>48%</Width>
							<Height>6%</Height>
							<Items>
								<Item Value='Salvager'>Dedicated Salvager</Item>
								<Item Value='Miner'>Miner</Item>
								<Item Value='HangerSale'>Hanger Sale</Item>
							</Items>
							<OnLoad>
								This.ItemByValue[${Script[ComBot].VariableScope.Config.Common.ComBot_Mode}]:Select
							</OnLoad>
							<OnSelect>
								Script[ComBot].VariableScope.Config.Common:SetComBot_Mode[${This.SelectedItem.Value}]
							</OnSelect>
						</combobox>
					</Tab>


					<Tab Name='Salvager'>
						<frame name='obj_SalvageFillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						</frame>					
						<Text name='obj_SalvageBookmarkListTitle'> 
									<X>0</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Salvage Bookmarks</Text>
						</Text>						 
						<listbox Name="obj_SalvageBookmarkList">
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<Text name='obj_SalvageStateListTitle'> 
									<X>40%</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Pending States</Text>
						</Text>						 
						<listbox Name="obj_SalvageStateList">
							<Font template='Listbox.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>40%</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<button	Name='Config'>
							<Font template='Button.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0%</X>
							<Y>90%</Y>
							<Width>100%</Width>
							<Height>10%</Height>
							<Text>Settings</Text>
							<OnLeftClick>
								timedcommand 0 "ui -load \"&filepath;/ComBotGUI_DedicatedSalvager.xml\""
							</OnLeftClick>
						</button>						
					</Tab>


					<Tab Name='Miner'>
						<frame name='obj_MinerFillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						</frame>					
						<Text name='obj_MinerBookmarkListTitle'> 
									<X>0</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Miner Bookmarks</Text>
						</Text>						 
						<listbox Name="obj_MinerBookmarkList">
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<Text name='obj_MinerStateListTitle'> 
									<X>40%</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Pending States</Text>
						</Text>						 
						<listbox Name="obj_MinerStateList">
							<Font template='Listbox.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>40%</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<button	Name='Config'>
							<Font template='Button.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0%</X>
							<Y>90%</Y>
							<Width>100%</Width>
							<Height>10%</Height>
							<Text>Settings</Text>
							<OnLeftClick>
								timedcommand 0 "ui -load \"&filepath;/ComBotGUI_Miner.xml\""
							</OnLeftClick>
						</button>						
					</Tab>
					
					<Tab Name='Hangar Sale'>
						<frame name='obj_HangerSaleFillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						</frame>					
						<Text name='obj_HangerSaleListTitle'> 
									<X>0</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Miner Bookmarks</Text>
						</Text>						 
						<listbox Name="obj_HangerSaleList">
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<Text name='obj_HangerSaleStateListTitle'> 
									<X>40%</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Pending States</Text>
						</Text>						 
						<listbox Name="obj_HangerSaleStateList">
							<Font template='Listbox.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>40%</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>80%</Height>
						</listbox>
						<button	Name='Config'>
							<Font template='Button.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0%</X>
							<Y>90%</Y>
							<Width>100%</Width>
							<Height>10%</Height>
							<Text>Settings</Text>
							<OnLeftClick>
								timedcommand 0 "ui -load \"&filepath;/ComBotGUI_HangerSale.xml\""
							</OnLeftClick>
						</button>						
					</Tab>
				</Tabs>
			</TabControl>
		</Children>
	</window>
	
</ISUI>
