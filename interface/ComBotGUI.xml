						<console Name="StatusConsole">
							<Font template='Console.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0</X>
							<Y>0</Y>
							<Width>100%</Width>
							<Height>90%</Height>
						</console>
						<combobox Name="ComBot_Mode">
							<BackgroundColor>FF000000</BackgroundColor>
							<X>1%</X>
							<Y>92%</Y>
							<Width>48%</Width>
							<Height>6%</Height>
							<Items>
								<Item Value='Salvager'>Dedicated Salvager</Item>
								<Item Value='Miner'>Miner</Item>
								<Item Value='HangerSale'>Hanger Sale</Item>
								<Item Value='Combat'>Simple Clear Agro and Pocket</Item>
							</Items>
							<OnLoad>
								This.ItemByValue[${Script[ComBot].VariableScope.Config.Common.ComBot_Mode}]:Select
							</OnLoad>
							<OnSelect>
								variable int counter
								Script[ComBot].VariableScope.Config.Common:SetComBot_Mode[${This.SelectedItem.Value}]
								for ( counter:Set[1] ; ${counter} &lt;= ${This.Items} ; counter:Inc )
								{
									Script[ComBot].VariableScope.${This.OrderedItem[${Counter}]}:Clear
								}
								Script[ComBot].VariableScope.ComBot:Pause
							</OnSelect>
						</combobox>
						<Checkbox name='AutoStart'>
							<X>51%</X>
							<Y>92%</Y>
							<Width>48%</Width> 
							<Height>6%</Height> 
							<Text>Start automatically</Text>
							<OnLoad>
								if ${Script[ComBot].VariableScope.Config.Common.AutoStart}
