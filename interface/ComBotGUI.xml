<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='Console.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
	</template>	

	<window name='ComBot'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>550</Width>
		<Height>320</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_TitleBar_Title'>
					<X>200</X>
					<Y>3</Y>
					<Width>200</Width>
					<Height>20</Height>
					<Text>ComBot by Tehtsuo</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						endscript ComBot
					</OnLeftClick>
				</button>
				<button	Name='Run'>
					<X>0</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Run</Text>
					<OnLeftClick>
						if ${Script[ComBot].VariableScope.ComBot.Paused}
						{
							This:SetText[Stop]
							Script[ComBot].VariableScope.ComBot:Resume
						}
						else
						{
							This:SetText[Run]
							Script[ComBot].VariableScope.ComBot:Pause
						}
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_Children">
			<TabControl	Name='ComBotTab'>
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<Tabs>
					<Tab Name='Status'>
						<frame name='FillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						 </frame>					
						<console Name="StatusConsole">
							<Font template='Console.Font' />
							<BackgroundColor>FF000000</BackgroundColor>
							<X>0</X>
							<Y>0</Y>
							<Width>100%</Width>
							<Height>90%</Height>
						</console>
						<combobox Name="ComBot_Mode">
							<BackgroundColor>FF000000</BackgroundColor>
							<X>1%</X>
							<Y>92%</Y>
							<Width>48%</Width>
							<Height>6%</Height>
							<Items>
								<Item Value='Salvager'>Dedicated Salvager</Item>
							</Items>
							<OnLoad>
								This.ItemByValue[${Config.Common.ComBot_Mode}]:Select
							</OnLoad>
							<OnSelect>
							</OnSelect>
						</combobox>
					</Tab>
					<Tab Name='Salvager'>
						<frame name='obj_SalvageFillerFrame'>
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>0</Y>
							<Height>100%</Height>
							<Width>100%</Width>
						</frame>					
						<Text name='obj_SalvageBookmarkListTitle'> 
									<X>0</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Salvage Bookmarks</Text>
						</Text>						 
						<listbox Name="obj_SalvageBookmarkList">
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>0</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>90%</Height>
						</listbox>
						<Text name='obj_SalvageStateListTitle'> 
									<X>40%</X> 
									<Y>5%</Y> 
									<Width>40%</Width> 
									<Height>5%</Height> 
									<Alignment>Center</Alignment>
									<Text>Pending States</Text>
						</Text>						 
						<listbox Name="obj_SalvageStateList">
							<BackgroundColor>FF000000</BackgroundColor>
							<Border>1</Border>
							<BorderColor>FFFFFFFF</BorderColor>
							<X>40%</X>
							<Y>10%</Y>
							<Width>40%</Width>
							<Height>90%</Height>
						</listbox>
					</Tab>
				</Tabs>
			</TabControl>
		</Children>
	</window>
	
</ISUI>
