	<template name='Console.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<template name='Button.Font'>	
		<Name>Arial</Name>
		<Size>12</Size>
		<Color>FF000000</Color>
		<Bold>TRUE</Bold>
	</template>	

	<window name='ComBot'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>550</Width>
		<Height>320</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_TitleBar_Title'>
					<Alignment>Center</Alignment>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Text>ComBot by Tehtsuo/Vendan</Text>
				</Text>
				<button	Name='Close'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						endscript ComBot
					</OnLeftClick>
				</button>
				<button	Name='Hide'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>r80</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Hide</Text>
					<OnLeftClick>
						if ${UIElement[ComBotTab@ComBot].Visible}
						{
							UIElement[ComBotTab@ComBot]:Hide
							This:SetText[Show]
						}
						else
						{
							UIElement[ComBotTab@ComBot]:Show
							This:SetText[Hide]
						}
					</OnLeftClick>
				</button>
				<button	Name='Run'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>0</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Run</Text>
					<OnLeftClick>
						if ${Script[ComBot].VariableScope.ComBot.Paused}
						{
							Script[ComBot].VariableScope.ComBot:Resume
						}
						else
						{
							Script[ComBot].VariableScope.ComBot:Pause
						}
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
