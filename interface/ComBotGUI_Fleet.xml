	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_Fleet'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_Miner_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>Fleet Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/ComBotGUI_Fleet"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_Fleet_Children">
			<Frame name="ComBot_Fleet_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_Fleet_Frame_Children">
					<Text name='obj_FleetInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text></Text>
					</Text>						 

					<Tree Name="Combot_Fleet_Tree">
						<X>0%</X>
						<Y>20%</Y>
						<Width>100%</Width>
						<Height>60%</Height>
						<OnLoad>
							This.Root:AddChild[Fleet,ffffffff]
						</OnLoad>
					</Tree>
					<TextEntry Name="AddFleetMemberText">
						<X>1%</X>
						<Y>81%</Y>
						<Width>30%</Width>
						<Height>3%</Height>
					</TextEntry>
					<button	Name='AddFleetMember'>
						<X>32%</X>
						<Y>81%</Y>
						<Width>15%</Width>
						<Height>3%</Height>
						<Text>Add Fleet Member</Text>
						<OnLeftClick>
							if ${UIElement[AddFleetMemberText@ComBot_Fleet_Frame@ComBot_Fleet].Text.Length}
							{
								if ${UIElement[Combot_Fleet_Tree@ComBot_Fleet_Frame@ComBot_Fleet].GetNode[Text == "Fleet"].Children(exists)}
								{
								
								}
								else
								{
									UIElement[Combot_Fleet_Tree@ComBot_Fleet_Frame@ComBot_Fleet].GetNode[Text == "Fleet"]:AddChild[${UIElement[AddFleetMemberText@ComBot_Fleet_Frame@ComBot_Fleet].Text}, ffffff00]
								}
							}
						</OnLeftClick>
					</button>
					<combobox Name="Wing">
						<X>48%</X>
						<Y>81%</Y>
						<Width>5%</Width>
						<Height>3%</Height>
						<Items>
							<Item Default='1'>1</Item>
							<Item>2</Item>
							<Item>3</Item>
							<Item>4</Item>
							<Item>5</Item>
						</Items>
					</combobox>					
					<button	Name='MoveToWing'>
						<X>54%</X>
						<Y>81%</Y>
						<Width>10%</Width>
						<Height>3%</Height>
						<Text>Move To Wing</Text>
					</button>
					<combobox Name="Squad">
						<X>65%</X>
						<Y>81%</Y>
						<Width>5%</Width>
						<Height>3%</Height>
						<Items>
							<Item Default='1'>1</Item>
							<Item>2</Item>
							<Item>3</Item>
							<Item>4</Item>
							<Item>5</Item>
						</Items>
					</combobox>					
					<button	Name='MoveToSquad'>
						<X>71%</X>
						<Y>81%</Y>
						<Width>10%</Width>
						<Height>3%</Height>
						<Text>Move To Squad</Text>
					</button>
					
					
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
