	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_Launcher'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>400</Width>
		<Height>400</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_Launcher_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>Launcher Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/Launcher"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_Launcher_Children">
			<Frame name="ComBot_Launcher_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_Launcher_Frame_Children">
					<Text name='obj_LauncherInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text>Launcher is a MiniMode which runs innerspace commands.  Commands are run relative to the Innerspace folder.</Text>
					</Text>
					
					<Text name='CommandLineTitle'> 
						<X>1%</X> 
						<Y>23%</Y> 
						<Width>98%</Width> 
						<Height>10%</Height> 
						<Alignment>Center</Alignment>
						<Text>Command Line</Text>
					</Text>
					<Textentry name='CommandLine'> 
						<X>1%</X> 
						<Y>30%</Y> 
						<Width>98%</Width> 
						<Height>10%</Height> 
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Launcher.Config.CommandLine}]
						</OnLoad>
						<OnChange>
							if ${This.Text.Length}
							{
								Script[ComBot].VariableScope.Launcher.Config:SetCommandLine[${This.Text}]
							}
							else
							{
								Script[ComBot].VariableScope.Launcher.Config:SetCommandLine[\"\"]
							}
						</OnChange>
					</Textentry>

				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
