	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_DroneControl'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_DroneControl_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>DroneControl Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/DroneControl"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_DroneControl_Children">
			<Frame name="ComBot_DroneControl_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_DroneControl_Frame_Children">
					<Text name='obj_DroneControlInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text>DroneControl is a mini-mode that continously scans surrounding space for enemies and attacks them with the selected drones.  DroneControl also handles interfacing with other sessions running ComBot to collaborate on killing targets</Text>
					</Text>
					<Text name="EntityListTitle">
						<X>1%</X>
						<Y>12%</Y>
						<Width>32%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Drone List</Text>
					</Text>
					<listbox Name="EntityList">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>15%</Y>
						<Width>32%</Width>
						<Height>30%</Height>
						<OnLoad>
							variable index:item drones
							variable iterator drone
							MyShip:GetDrones[drones]
							drones:GetIterator[drone]
							if ${drone:First(exists)}
							{
								do
								{
									if !${This.ItemByValue[${drone.Value.TypeID}](exists)}
									{
										This:AddItem[${drone.Value.Name}, ${drone.Value.TypeID}]
									}
								}
								while ${drone:Next(exists)}
							}
							
							This.ItemByValue[${Script[ComBot].VariableScope.DroneControl.Config.DroneType}]:Select
							
						</OnLoad>
						<OnSelect>
							echo ${This.SelectedItem.Value}
							Script[ComBot].VariableScope.DroneControl.Config:SetDroneType[${This.SelectedItem.Value}]
						</OnSelect>
					</listbox>
					
					<Checkbox name='Sentries'>
						<X>1%</X>
						<Y>50%</Y>
						<Width>30%</Width> 
						<Height>3%</Height> 
						<Text>Use Sentry drones to attack targets more than ${Script[ComBot].VariableScope.DroneControl.Config.SentryRange} km away</Text>
						<OnLoad>
							if ${Script[ComBot].VariableScope.DroneControl.Config.Sentries}
							{
								This:SetChecked
							}
						</OnLoad>
						<OnLeftClick>
							Script[ComBot].VariableScope.DroneControl.Config:SetSentries[${This.Checked}]
						</OnLeftClick>
					</Checkbox>
					<Slider name='SentryRange'> 
						<X>70%</X>
						<Y>50%</Y>
						<Width>20%</Width> 
						<Height>3%</Height> 
						<Border>1</Border>
						<Range>300</Range>
						<OnLoad>
							This:SetValue[${Script[ComBot].VariableScope.DroneControl.Config.SentryRange}]
						</OnLoad>
						<OnChange>
							Script[ComBot].VariableScope.DroneControl.Config:SetSentryRange[${This.Value}]
						</OnChange>
					</Slider>							
					
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
