	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_AutoLogout'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_AutoLogout_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>AutoLogout Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/AutoLogout"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_AutoLogout_Children">
			<Frame name="ComBot_AutoLogout_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_AutoLogout_Frame_Children">
					<Text name='obj_AutoLogoutInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text>AutoLogout is a MiniMode to automatically log you out at a specified time</Text>
					</Text>
					<Text name='obj_AutoLogout_Bookmark_Label'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>20%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<Text>Logout Bookmark</Text>
					</Text>
					<Textentry name='obj_AutoLogout_Bookmark'> 
						<X>1%</X> 
						<Y>23%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<OnLoad>
							This:SetText[${Script[Combot].VariableScope.AutoLogout.Config.Bookmark}]
						</OnLoad>
						<OnChange>
							Script[Combot].VariableScope.AutoLogout.Config:SetBookmark[${This.Text}]
						</OnChange>
					</Textentry>
					<Text name='obj_AutoLogout_Hour_Label'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>40%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<Text>Logout Hour</Text>
					</Text>
					<Textentry name='obj_AutoLogout_Hour'> 
						<X>1%</X> 
						<Y>43%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<OnLoad>
							This:SetText[${Script[Combot].VariableScope.AutoLogout.Config.Hour}]
						</OnLoad>
						<OnChange>
							Script[Combot].VariableScope.AutoLogout.Config:SetHour[${This.Text}]
						</OnChange>
					</Textentry>
					<Text name='obj_AutoLogout_Minute_Label'> 
						<Font template='Information.Font' />
						<X>26%</X> 
						<Y>40%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<Text>Logout Minute</Text>
					</Text>
					<Textentry name='obj_AutoLogout_Minute'> 
						<X>26%</X> 
						<Y>43%</Y> 
						<Width>20%</Width> 
						<Height>3%</Height> 
						<OnLoad>
							This:SetText[${Script[Combot].VariableScope.AutoLogout.Config.Minute}]
						</OnLoad>
						<OnChange>
							Script[Combot].VariableScope.AutoLogout.Config:SetMinute[${This.Text}]
						</OnChange>
					</Textentry>
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
