	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	
	<template name='Text.Font'>	
		<Name>Verdana</Name>
		<Size>12</Size>
		<Color>FFFFFFFF</Color>
		<Bold />
	</template>	
	<template name='Checkbox.Font'>	
		<Name>Verdana</Name>
		<Size>12</Size>
		<Color>FFFFFFFF</Color>
		<Bold />
	</template>	
	<template name='Button.Font'>	
		<Name>Verdana</Name>
		<Size>12</Size>
		<Color>FF000000</Color>
		<Bold />
	</template>	

	<window name='ComBot_DedicatedSalvager'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_DedicatedSalvager_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>Dedicated Salvager Configuration</Text>
				</Text>
				<button	Name='Help'>
					<Font template='Button.Font' />
					<BackgroundColor>FF000000</BackgroundColor>
					<X>r80</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Help</Text>
					<OnLeftClick>
						timedcommand 0 "OSExecute http://eve.isxgames.com/wiki/index.php?title=ComBot_Salvager"
					</OnLeftClick>
				</button>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						if !${EVE.Bookmark[${Script[ComBot].VariableScope.Config.Salvager_Dropoff.Dropoff}](exists)}
						{
							Script[ComBot].VariableScope.UI:Update["obj_Salvage", "Unable to verify Dropoff bookmark", "r"]
						}
						if !${EVE.Bookmark[${Script[ComBot].VariableScope.Config.Salvager.BeltPatrolBookmark}](exists)}
						{
							Script[ComBot].VariableScope.UI:Update["obj_Salvage", "Unable to verify Belt Patrol bookmark", "r"]
						}

						Script[ComBot].VariableScope.Salvage.SalvageUI:Stop
						ui -unload "&filepath;/Salvage"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_DedicatedSalvager_Children">
			<Frame name="ComBot_DedicatedSalvager_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_DedicatedSalvager_Frame_Children">
					<Text name='PrefixTitle'> 
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>32%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Salvage Prefix</Text>
					</Text>						 
					<Textentry name='Prefix'> 
						<X>1%</X> 
						<Y>3%</Y> 
						<Width>32%</Width> 
						<Height>3%</Height> 
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Prefix}]
						</OnLoad>
						<OnChange>
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Prefix[${This.Text}]
						</OnChange>
					</Textentry>						 
					<Text name='DropoffTitle'> 
						<X>1%</X> 
						<Y>8%</Y> 
						<Width>32%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Dropoff Bookmark</Text>
					</Text>						 
					<Textentry Name="Dropoff">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>10%</Y>
						<Width>32%</Width>
						<Height>3%</Height>
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Dropoff}]
						</OnLoad>
						<OnChange>
							if ${This.Text.Length}
							{
								Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[${This.Text}]
							}
							else
							{
								Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[\"\"]
							}
							UIElement[DropoffList@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Show
							Script[ComBot].VariableScope.Salvage.SalvageUI:Start
						</OnChange>
					</Textentry>
					<listbox Name="DropoffList">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>13%</Y>
						<Width>32%</Width>
						<Height>30%</Height>
						<OnLoad>
							This:Hide
						</OnLoad>
						<OnSelect>
							UIElement[Dropoff@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:SetText[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Salvage.SalvageUI:Stop
							This:Hide
						</OnSelect>
					</listbox>
					<Text name='DropoffTypeTitle'> 
						<X>1%</X> 
						<Y>15%</Y> 
						<Width>32%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Dropoff Location Type</Text>
					</Text>
					<listbox Name="DropoffType">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>17%</Y>
						<Width>32%</Width>
						<Height>20%</Height>
						<Items>
							<Item>Personal Hangar</Item>
							<Item>Corporation Folder 1</Item>
							<Item>Corporation Folder 2</Item>
							<Item>Corporation Folder 3</Item>
							<Item>Corporation Folder 4</Item>
							<Item>Corporation Folder 5</Item>
							<Item>Corporation Folder 6</Item>
							<Item>Corporation Folder 7</Item>
						</Items>
						<OnLoad>
							This.ItemByText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Dropoff_Type}]:Select
						</OnLoad>
						<OnSelect>
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff_Type[${This.SelectedItem.Text}]
						</OnSelect>
					</listbox>

					<Textentry Name="BeltPatrolBookmark">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>34%</X>
						<Y>5%</Y>
						<Width>32%</Width>
						<Height>3%</Height>
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.BeltPatrolBookmark}]
						</OnLoad>
						<OnChange>
							if ${This.Text.Length}
							{
								Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[${This.Text}]
							}
							else
							{
								Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[\"\"]
							}
							UIElement[BeltPatrolBookmarkList@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Show
							Script[ComBot].VariableScope.Salvage.SalvageUI:Start
						</OnChange>
					</Textentry>
					<listbox Name="BeltPatrolBookmarkList">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>34%</X>
						<Y>8%</Y>
						<Width>32%</Width>
						<Height>37%</Height>
						<OnLoad>
							This:Hide
						</OnLoad>
						<OnSelect>
							UIElement[BeltPatrolBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:SetText[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Salvage.SalvageUI:Stop
							This:Hide
						</OnSelect>
					</listbox>

					<Checkbox name='BeltPatrol'> 
						<X>34%</X> 
						<Y>1%</Y> 
						<Width>32%</Width> 
						<Height>3%</Height> 
						<Alignment>Center</Alignment>
						<Text>Patrol asteroid belts by default</Text>
						<OnLoad>
							if ${Script[ComBot].VariableScope.Config.Salvager.BeltPatrol}
							{
								This:SetChecked
							}
							else
							{
								UIElement[BeltPatrolBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Hide
							}
						</OnLoad>
						<OnLeftClick>
							Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrol[${This.Checked}]
							if ${This.Checked}
							{
								UIElement[BeltPatrolBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Show
							}
							else
							{
								UIElement[BeltPatrolBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Hide
								UIElement[BeltPatrolBookmarkList@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:Hide
							}
						</OnLeftClick>
					</Checkbox>
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
