	<template name='Information.Font'>	
		<Name>Terminal</Name>
		<Size>8</Size>
		<Color>FFFFFFFF</Color>
	</template>	

	<window name='ComBot_DedicatedSalvager'>
		<Visible>1</Visible>
		<BackGroundColor></BackGroundColor>
		<Border>0</Border>
		<X>200</X>
		<Y>300</Y>
		<Width>800</Width>
		<Height>600</Height>
		<TitleBar>
			<Width>100%</Width>
			<Height>20</Height>
			<Border>0</Border>
			<BackgroundColor>FF000000</BackgroundColor>
			<Children>
				<Text name='ComBot_DedicatedSalvager_TitleBar_Title'>
					<X>0</X>
					<Y>3</Y>
					<Width>100%</Width>
					<Height>20</Height>
					<Alignment>Center</Alignment>
					<Text>Dedicated Salvager Configuration</Text>
				</Text>
				<button	Name='Close'>
					<X>r40</X>
					<Y>0</Y>
					<Width>40</Width>
					<Height>20</Height>
					<Text>Close</Text>
					<OnLeftClick>
						ui -unload "&filepath;/Salvage"
					</OnLeftClick>
				</button>
			</Children>
		</TitleBar>
		<Children name="ComBot_DedicatedSalvager_Children">
			<Frame name="ComBot_DedicatedSalvager_Frame">
				<X>0</X>
				<Y>5</Y>
				<Width>100%</Width>
				<Height>100%</Height>
				<BackgroundColor>FF000000</BackgroundColor>
				<Border>1</Border>
				<BorderColor>FFFFFFFF</BorderColor>
				<Children name="ComBot_DedicatedSalvager_Frame_Children">
					<Text name='obj_SalvageInformation'> 
						<Font template='Information.Font' />
						<X>1%</X> 
						<Y>1%</Y> 
						<Width>98%</Width> 
						<Height>18%</Height> 
						<Wrap />
						<Text>The dedicated salvager mode will automatically salvage from bookmarks found in your address book with a prefix matching what you set below.  It will follow gates only when there are newer bookmarks available from the creator of the bookmark to the gate.  This means it will not gate to a room which has not been cleared, with the exception of non-linear missions like Worlds Collide.  Note - if NPCs are present when the Salvager warps in, it will immediately panic warp to a star and block the bookmark creator's bookmarks for an interval of time.  If a wreck or can contains contraband, it will be marked as abandoned as a flag for the salvager to ignore the object.</Text>
					</Text>						 
					<Text name='obj_SalvagePrefixTitle'> 
						<X>1%</X> 
						<Y>20%</Y> 
						<Width>30%</Width> 
						<Height>2%</Height> 
						<Text>Salvage Prefix</Text>
					</Text>						 
					<Textentry name='obj_SalvagePrefix'> 
						<X>1%</X> 
						<Y>22%</Y> 
						<Width>30%</Width> 
						<Height>3%</Height> 
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Prefix}]
						</OnLoad>
						<OnChange>
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Prefix[${This.Text}]
						</OnChange>
					</Textentry>						 
					<Text name='obj_SalvageDropoffBookmarkListTitle'> 
						<X>1%</X> 
						<Y>28%</Y> 
						<Width>30%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Dropoff Bookmark</Text>
					</Text>						 
					<Textentry Name="obj_SalvageDropoffBookmark">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>30%</Y>
						<Width>30%</Width>
						<Height>3%</Height>
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Dropoff}]
						</OnLoad>
						<OnChange>
							if ${This.Text.Length}
							{
								Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[${This.Text}]
							}
							else
							{
								Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[\"\"]
							}
							
						</OnChange>
					</Textentry>
					<listbox Name="obj_SalvageDropoffBookmarkList">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>1%</X>
						<Y>33%</Y>
						<Width>30%</Width>
						<Height>37%</Height>
						<OnSelect>
							UIElement[obj_SalvageDropoffBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:SetText[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff[${This.SelectedItem.Text}]
						</OnSelect>
					</listbox>
					<Text name='obj_SalvageDropoffBookmarkTypeTitle'> 
						<X>31%</X> 
						<Y>28%</Y> 
						<Width>30%</Width> 
						<Height>2%</Height> 
						<Alignment>Center</Alignment>
						<Text>Dropoff Location Type</Text>
					</Text>
					<listbox Name="obj_SalvageDropoffBookmarkType">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>31%</X>
						<Y>30%</Y>
						<Width>30%</Width>
						<Height>40%</Height>
						<Items>
							<Item>Personal Hangar</Item>
							<Item>Corporation Folder 1</Item>
							<Item>Corporation Folder 2</Item>
							<Item>Corporation Folder 3</Item>
							<Item>Corporation Folder 4</Item>
							<Item>Corporation Folder 5</Item>
							<Item>Corporation Folder 6</Item>
							<Item>Corporation Folder 7</Item>
						</Items>
						<OnLoad>
							This.ItemByText[${Script[ComBot].VariableScope.Config.Salvager.Salvager_Dropoff_Type}]:Select
						</OnLoad>
						<OnSelect>
							Script[ComBot].VariableScope.Config.Salvager:SetSalvager_Dropoff_Type[${This.SelectedItem.Text}]
						</OnSelect>
					</listbox>
					<Checkbox name='obj_SalvageBeltPatrol'> 
						<X>61%</X> 
						<Y>27%</Y> 
						<Width>30%</Width> 
						<Height>3%</Height> 
						<Alignment>Center</Alignment>
						<Text>Patrol asteroid belts by default</Text>
						<OnLoad>
							if ${Script[ComBot].VariableScope.Config.Salvager.BeltPatrol}
							{
								This:SetChecked
							}
						</OnLoad>
						<OnLeftClick>
							Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrol[${This.Checked}]
						</OnLeftClick>
					</Checkbox>
					<Textentry Name="obj_SalvageBeltPatrolBookmark">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>61%</X>
						<Y>30%</Y>
						<Width>30%</Width>
						<Height>3%</Height>
						<OnLoad>
							This:SetText[${Script[ComBot].VariableScope.Config.Salvager.BeltPatrolBookmark}]
						</OnLoad>
						<OnChange>
							if ${This.Text.Length}
							{
								Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[${This.Text}]
							}
							else
							{
								Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[\"\"]
							}
							
						</OnChange>
					</Textentry>
					<listbox Name="obj_SalvageBeltPatrolBookmarkList">
						<BackgroundColor>FF000000</BackgroundColor>
						<Border>1</Border>
						<BorderColor>FFFFFFFF</BorderColor>
						<X>61%</X>
						<Y>33%</Y>
						<Width>30%</Width>
						<Height>37%</Height>
						<OnSelect>
							UIElement[obj_SalvageBeltPatrolBookmark@ComBot_DedicatedSalvager_Frame@ComBot_DedicatedSalvager]:SetText[${This.SelectedItem.Text}]
							Script[ComBot].VariableScope.Config.Salvager:SetBeltPatrolBookmark[${This.SelectedItem.Text}]
						</OnSelect>
					</listbox>
				</Children>
			</Frame>
		</Children>
	</window>
	
</ISUI>
